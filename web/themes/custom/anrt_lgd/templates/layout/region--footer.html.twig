{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'lgd-region',
    'lgd-region--' ~ region|clean_class,
    'region',
    'region-' ~ region|clean_class,
  ]
%}

<div{{ attributes.addClass(classes) }}>
  
  <div class="lgd-container padding-horizontal">

    <div class="lgd-row lgd-row--vertically-centered">
      <div class="lgd-row__three-quarters region-footer__grid-item">
        <div class="lgd-region__inner lgd-region__inner--{{ region|clean_class }}">
          {{ content }}
        </div>
      </div>
      <div class="lgd-row__one-quarter region-footer__grid-item">
        <ul class="menu footer-social-links">
          <li class="menu-item">
            <a href="https://www.facebook.com/TheEssexLocalOffer/">
              <span class="visually-hidden">{{ 'Follow us on Facebook'|t }}</span>
              {% include "@localgov_base/includes/icons/icon.html.twig" with {
                  icon_name: 'facebook-square',
                  icon_classes: 'lgd-icon--larger',
                }
              %}
            </a>
          </li>
        </ul>
      </div>

    </div>

    <hr class="region-footer__rule">
    <div class="lgd-row">
      <div class="lgd-row__one-half">
        <div class="region-footer__notice region-footer__notice--copyright">
          Â©{{ 'Copyright Essex County Council'|t }} {{ now|date("Y") }}
        </div>
      </div>
      <div class="lgd-row__one-half">
        <div class="region-footer__notice region-footer__notice--credit">
          {{ 'Built by the Service Transformation Team'|t }}
        </div>
      </div>
    </div>

  </div> 

</div>
