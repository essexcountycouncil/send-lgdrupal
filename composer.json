{
    "name": "localgovdrupal/localgov-project",
    "description": "Project template for the LocalGov Drupal distribution.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/localgovdrupal/localgov_project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://code.anner.ie/api/v4/group/6/-/packages/composer/packages.json"
        }
    ],
    "require": {
        "anrt-tools/docksal-configuration": "dev-master",
        "composer/installers": "^1.10",
        "cweagans/composer-patches": "^1.6",
        "drupal/core-composer-scaffold": "^9.1",
        "drupal/core-recommended": "^9.1",
        "drupal/devel": "^4.1",
        "drupal/disable_html5_validation": "^1.1",
        "drupal/feeds": "^3.0@beta",
        "drupal/feeds_tamper": "^2.0@beta",
        "drupal/matomo": "^1.19",
        "drupal/mgv": "^2.1",
        "drupal/migrate_devel": "^2.0@alpha",
        "drupal/migrate_plus": "^6.0",
        "drupal/migrate_source_csv": "^3.5",
        "drupal/migrate_tools": "^6.0",
        "drupal/office_hours": "^1.7",
        "drupal/publishcontent": "^1.5",
        "drupal/search_api_solr": "^4.2",
        "drupal/search_api_spellcheck": "^4.0",
        "drupal/twig_tweak": "^3.1",
        "drupal/views_data_export": "^1.1",
        "drupal/webform": "^6.1",
        "drupal/webform_query": "^2.0@alpha",
        "drupal/webform_views": "^5.0@beta",
        "drupal/webform_workflows_element": "^1.0@alpha",
        "drush/drush": "^10.6",
        "localgovdrupal/localgov": "^2.0",
        "platformsh/config-reader": "^2.4"
    },
    "require-dev": {
        "brianium/paratest": "^6.0",
        "drupal/coder": "^8.3",
        "drupal/config_inspector": "^1.3",
        "drupal/core-dev": "^9.1",
        "mglaman/phpstan-drupal": "^0.12",
        "phpspec/prophecy-phpunit": "^2",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-deprecation-rules": "^0.12",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "bin-dir": "bin/",
        "gitlab-domains": ["code.anner.ie"],
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true
        }
    },
    "extra": {
        "enable-patching": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[web-root]/sites/default/settings.php": {
                    "mode": "replace",
                    "path": "assets/composer/settings.php",
                    "overwrite": false
                },
                "[web-root]/sites/default/settings.platformsh.php": {
                    "mode": "replace",
                    "path": "assets/composer/settings.platformsh.php",
                    "overwrite": false
                },
                "[web-root]/sites/development.services.yml": "assets/composer/development.services.yml"
            }
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "drupal-core-project-message": {
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                                  </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the LocalGov Drupal codebase  </>",
                "<bg=blue;fg=white>                                                                  </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",

                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        },
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "Make exposed filter values available as tokens for text areas": "https://www.drupal.org/files/issues/2021-07-02/2761273-39.patch"
            },
            "localgovdrupal/localgov_directories": {
                "Use an 'and' query between facet groups and 'or' within them": "https://patch-diff.githubusercontent.com/raw/localgovdrupal/localgov_directories/pull/235.patch"
            },
            "localgovdrupal/localgov_base": {
                "Link media files to file": "https://patch-diff.githubusercontent.com/raw/localgovdrupal/localgov_base/pull/293.patch",
                "Fieldset form error styling": "https://patch-diff.githubusercontent.com/raw/localgovdrupal/localgov_base/pull/295.patch"
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Anrt\\Tools\\DocksalConfiguration\\Scripts::postUpdate"
        ],
        "post-update-cmd": [
            "Anrt\\Tools\\DocksalConfiguration\\Scripts::postUpdate"
        ]
    }
}
